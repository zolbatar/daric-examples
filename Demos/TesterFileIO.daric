Print "Daric File I/O Test Suite"
Print "-------------------------"
Print

If @Main Then
'    Mode -1,-1,Fullscreen
    Mode 1280,768,Windowed
	File()
EndIf

Def File()
	Print "BPut Then BGet     = ";
	channel=OpenOut("Test")
	BPut channel, ASC("A")
	Close channel
	channel=OpenIn("Test")
	V=BGet(channel)
	If V=65 Pass() Else Fail()
	Close channel

	channel=OpenIn("Test")
	Print "Tell               = ";:If Tell(channel)=0 Pass() Else Fail()
	Seek(channel,1)
	Print "Seek               = ";:If Tell(channel)=1 Pass() Else Fail()
	Close channel

	Print "Delete             = ";
	Delete "Test":Pass()
	Print "List Files         = ";:Print Dir(".")
	Print "Files Index 0      = ";:Print DirEntry(0)
EndDef

Def Pass()
    Print "PASS!"
EndDef

Def Fail()
    Print "!! FAILED TEST !!"
    End
EndDef
